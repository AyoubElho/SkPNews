<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkPNewsMvvm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:direction">right_to_left</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="emptyState">
        <item name="android:src">@drawable/empty_box_day</item>
    </style>


    <style name="CornerSize">
        <item name="cornerSize">10%</item>
    </style>

    <style name="SplashImage">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">
            @drawable/splach_image_black
        </item>
    </style>

    <style name="toolbar_font">
        <item name="android:fontFamily">@font/far_casablanca</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="navBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:background">@color/toolbar_day</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="الاخبار_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/honor</item>
    </style>

    <style name="عرض_الكل_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end|center</item>
        <item name="android:textColor">#007FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/questv1</item>
    </style>

    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="cardBackgroundColor">@color/trasparent_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- styles.xml -->
    <style name="MyMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <!-- Add any other attributes you want to customize -->
    </style>



</resources>